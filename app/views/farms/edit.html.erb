<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h2>Change Your Farm Details</h2>
  <br />
  <%= simple_form_for @farm do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.submit 'Save Changes', class: 'btn btn-sm btn-success pull-right' %>

  <%= link_to 'Delete Farm', farm_path(@farm), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-sm' %>
  <% end %>

</div>
