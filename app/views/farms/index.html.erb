<div class="row">
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <div class="row">

      <div class="col-sm-12">

        <form class="form-inline">
          <div class="form-group">
            <label for="exampleInputEmail1">From</label>
            <%= text_field_tag :from, params[:from], class: 'form-control', placeholer: 'From' %>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">To</label>
            <%= text_field_tag :to, params[:to], class: 'form-control', placeholer: 'To' %>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

<br />
<% @farms.each do |farm| %>
<div class="row">
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <div class="row">

      <div class="col-sm-4">
        <%= image_tag 'tree.jpeg', class: 'img-responsive' %>
      </div>

      <div class="col-sm-8">
        <br />
        <h3><%= link_to farm.name, farm_path(farm) %></h3>
        <p />
        <%= farm.address %>
        <p />
        <%= farm.description %>
      </div>

    </div>
  </div>
</div>
<br />
<% end %>

<div class="row">
    <div class="l-pagination">
      <%= will_paginate @places %>
  </div>
</div>
